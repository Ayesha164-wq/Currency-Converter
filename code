import java.util.Scanner;

public class CurrencyConverter {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Hardcoded exchange rates (Base: USD)
        double usdToInr = 83.0;
        double usdToEur = 0.91;
        double inrToUsd = 0.012;
        double eurToUsd = 1.10;

        System.out.println("=== Currency Converter ===");
        System.out.println("1. USD to INR");
        System.out.println("2. USD to EUR");
        System.out.println("3. INR to USD");
        System.out.println("4. EUR to USD");

        System.out.print("Choose conversion option (1-4): ");
        int choice = sc.nextInt();

        System.out.print("Enter amount: ");
        double amount = sc.nextDouble();

        double result = 0;
        String fromCurrency = "", toCurrency = "";

        switch (choice) {
            case 1:
                result = amount * usdToInr;
                fromCurrency = "USD";
                toCurrency = "INR";
                break;
            case 2:
                result = amount * usdToEur;
                fromCurrency = "USD";
                toCurrency = "EUR";
                break;
            case 3:
                result = amount * inrToUsd;
                fromCurrency = "INR";
                toCurrency = "USD";
                break;
            case 4:
                result = amount * eurToUsd;
                fromCurrency = "EUR";
                toCurrency = "USD";
                break;
            default:
                System.out.println("Invalid choice!");
                sc.close();
                return;
        }

        System.out.printf("%.2f %s = %.2f %s%n", amount, fromCurrency, result, toCurrency);
        sc.close();
    }
}
